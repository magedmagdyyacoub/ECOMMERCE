<%- include('../layouts/header') %>
<main>
  <section class="product-detail">
    <div class="container">
      <div class="product-detail-wrapper">
        <!-- Product Image and Info -->
        <div class="product-detail-left">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="product-detail-image">
        </div>
        
        <!-- Product Details -->
        <div class="product-detail-right">
          <h1 class="product-name"><%= product.name %></h1>
          <p class="product-price">$<%= product.price %></p>
          <p class="product-description"><%= product.description %></p>
          
          <!-- Add to Cart Button -->
          <div class="product-quantity">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" value="1" min="1" class="quantity-input">
          </div>
          <button class="btn-add-to-cart">
            <a href="/cart/add/:id">Add to Cart</a>
          </button>
        </div>
      </div>
      
      <!-- Related Products Section -->
      <div class="related-products">
        <h3>Related Products</h3>
        <div class="related-products-grid">
          <% relatedProducts.forEach(product => { %>
            <div class="related-product-item">
              <img src="<%= product.image_url %>" alt="<%= product.name %>" class="related-product-image">
              <h4><%= product.name %></h4>
              <p class="related-product-price">$<%= product.price %></p>
              <a href="/product/<%= product.id %>" class="btn btn-view">View Product</a>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
  
</main>
<%- include('../layouts/footer') %>
